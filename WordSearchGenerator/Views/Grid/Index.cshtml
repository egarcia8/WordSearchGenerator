@model WordSearchGenerator.Models.Grid


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<h2 class="text-center">Your word search</h2>

<div class="container">
    <div class="row">
        <table class="col" id="grid">
          
        </table>
        <div class="col-md-auto">
            <table id="wordList">
                <tr>
                    <th>Word List</th>
                </tr>
                <tr>
                    <td>
                        <ul class="list-unstyled" id="words">
                          
                        </ul>
                    </td>
                    
                </tr>
                    
               
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="text-center col-xs-2 mt-5">
            <h5>These words did not fit in your puzzle:</h5>
            <ul class="list-unstyled" id="wordNoFit">
                
            </ul>
        </div>
    </div>
</div>
<div class="container">
     <div class="row">
            <div class="text-center col-xs-2 mt-5">
                <button type="button" class="btn btn-outline-primary" id="rebuildGridButton">Rebuild Puzzle</button>
                <button type="button" class="btn btn-outline-success" id="goBackButton">Create New Puzzle</button>
            </div>
          </div>  
</div>


<script>
    window.gridObj = {
        gridSize:  @Html.Raw(Json.Serialize(@Model.GridSize)),
        wordList: @Html.Raw(Json.Serialize(@Model.WordList)),
        masterCoordinates: @Html.Raw(Json.Serialize(@Model.MasterCoordinates)),
        wordFit:  @Html.Raw(Json.Serialize(@Model.WordFit)),
        wordNoFit: @Html.Raw(Json.Serialize(@Model.WordNoFit)),
    }
</script>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="~/js/grid.js"></script>


