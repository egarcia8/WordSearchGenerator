@model WordSearchGenerator.Models.Grid



<div class="row mt-3 justify-content-md-center">
    <table class="col-lg-auto" id="grid">
        @foreach (var row in @Model.MasterCoordinates)
        {
            <tr>
                @foreach (var col in row)
                {
                    <td>@col</td>
                }
            </tr>
        }
    </table>
</div>

<div class="row mt-3 justify-content-md-center">
    <div class="col-md-auto">
        <h5>Word List:</h5>
    </div>
</div>    
<div class="row justify-content-md-center" id="fitWordList">
    <div class="col-md-auto">
        @await Html.PartialAsync("_PartialListView", Model.WordFit)
    </div>
</div>
@if(Model.WordNoFit.Count > 0) 
{
    <div class="row mt-3">
        <div class="col-md-auto">
            <h5>These words did not fit in your grid:</h5>
        </div>
    </div>
    <div class="row" id="noFitWordList">
        <div class="col-md-auto">
            @await Html.PartialAsync("_PartialListView", Model.WordNoFit)
        </div>
    </div>
}